<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    android:backgroundTint="@color/lightblue"
    tools:context=".BasicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bglogin">

            <Button
                android:id="@+id/vowelsBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="150dp"
                android:backgroundTint="@color/lightyellow"
                android:text="@string/vowels"
                android:textColor="@color/darkgray"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/consonantsBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/lightyellow"
                android:text="@string/conso"
                android:textColor="@color/darkgray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vowelsBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/RulesBtn"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/lightyellow"
                android:text="@string/combirules"
                android:textColor="@color/darkgray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vowelsBtn" />

            <Button
                android:id="@+id/NumbersBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/lightyellow"
                android:text="@string/numbers"
                android:textColor="@color/darkgray"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RulesBtn" />

            <Button
                android:id="@+id/UnitsBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/lightyellow"
                android:text="@string/Unit"
                android:textColor="@color/darkgray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/NumbersBtn"
                app:layout_constraintTop_toBottomOf="@+id/RulesBtn" />

            <Button
                android:id="@+id/dateBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/lightyellow"
                android:text="@string/date"
                android:textColor="@color/darkgray"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NumbersBtn" />

            <Button
                android:id="@+id/timeBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/lightyellow"
                android:text="@string/Time"
                android:textColor="@color/darkgray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dateBtn"
                app:layout_constraintTop_toBottomOf="@+id/UnitsBtn" />

            <Button
                android:id="@+id/locBtn"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/lightyellow"
                android:text="@string/locationDirection"
                android:textColor="@color/darkgray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateBtn" />

            <Button
                android:id="@+id/quizBtn"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/lightyellow"
                android:text="@string/quiz_time"
                android:textColor="@color/darkgray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locBtn" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>